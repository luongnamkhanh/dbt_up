# Example dbt profiles for the mesh POC
# Copy this to ~/.dbt/profiles.yml and adjust as needed
#
# For quick local testing, you can use DuckDB (no database setup required):
#   pip install dbt-duckdb

# DuckDB profiles (recommended for POC testing)
dbt_up:
  target: dev
  outputs:
    dev:
      type: duckdb
      path: ../dbt_mesh.duckdb

dbt_down_loom:
  target: dev
  outputs:
    dev:
      type: duckdb
      path: ../dbt_mesh.duckdb

dbt_down:
  target: dev
  outputs:
    dev:
      type: duckdb
      path: ../dbt_mesh.duckdb

